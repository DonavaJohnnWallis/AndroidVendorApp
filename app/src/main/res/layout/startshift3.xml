<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"

        >

        <TextView
            style="@style/smallwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="No Event Set"
            android:id="@+id/labelCurrentEvent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            style="@style/smallwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Credentials: "
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            android:id="@+id/imageView5" />

        <TextView
            style="@style/smallwordtext"
            android:text="Enter Vendor PIN to start a new shift. A shift records all transactions as well as staff ID's"
            android:layout_height="wrap_content"
            android:id="@+id/seteventtext"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editVendorCode"
            android:hint="Vendor Code"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textColorHint="#8e8e8e"
            android:backgroundTint="#efefef"
             />

        <EditText
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editVendorPin"
            android:layout_row="3"
            android:hint="Vendor pin"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textColorHint="#8e8e8e"
            android:backgroundTint="#efefef"
            android:fontFamily="sans-serif"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Continue"
            android:id="@+id/buttonStartShift"
            android:textStyle="bold"
            android:background="@drawable/buttonstate_main"

            android:layout_marginBottom="20dp"

            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"

            android:onClick="StartShift"

            />

        <TextView
            android:text="OR GO BACK TO:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:visibility="gone"/>



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Main Menu"
            android:id="@+id/buttonMainMenu"
            android:background="@drawable/buttonstate_main"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"

            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:onClick="MainMenu"
            />
    </LinearLayout>


</LinearLayout>