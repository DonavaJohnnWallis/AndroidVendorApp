<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_app"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Enter Vendor details to start a new shift."
            android:id="@+id/textView7"
            android:background="#000000"
            android:layout_margin="0dp" />

        <TextView
            style="@style/smallwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="No Event Set"
            android:id="@+id/labelCurrentEvent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            style="@style/smallwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Credentials: "
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_marginTop="40dp">


        <EditText
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editVendorCode"
            android:hint="Vendor Code"
            android:inputType="number"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editVendorPin"
            android:layout_row="3"
            android:hint="Vendor pin"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" START SHIFT"
            android:id="@+id/buttonStartShift"
            android:background="@drawable/ovalcornersfull"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"

            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"

            android:onClick="StartShift"

            />

        <TextView
            android:text="OR GO BACK TO:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:visibility="gone"/>



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Main Menu"
            android:id="@+id/buttonMainMenu"
            android:background="@drawable/ovalcornersstroke"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"

            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:onClick="MainMenu"
            />
    </LinearLayout>


</LinearLayout>