<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#be1c1d"
    tools:context="com.example.dsouchon.miidvendorapp.Reset101"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        "
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView"
            android:background="@drawable/exlimation"
            android:layout_gravity="center"
            android:layout_height="220dp"
            android:layout_width="220dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="007"
               android:layout_gravity="center_horizontal"
                android:textColorHint="#ffffff"
                android:visibility="invisible"/>

            <TextView
                android:text="WARNING!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:gravity="center_horizontal" />
            <TextView
                android:text="You are about to reset this application. Reset should only be done once and event is finished."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:layout_gravity="center_horizontal"
                  android:visibility="invisible"
                android:id="@+id/editText2"
                android:text="700"
                android:textColorHint="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login Admin"
                android:id="@+id/button"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="Login"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Application"
                android:id="@+id/button2"
                android:layout_row="3"
                android:layout_column="0"
                android:enabled="false"
                android:onClick="Reset"
                android:layout_gravity="center_horizontal"

                />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
