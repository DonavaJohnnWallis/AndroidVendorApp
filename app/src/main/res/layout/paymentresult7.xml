<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true">


    <EditText
        style="@style/BoldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Unsuccessful"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:ems="10"
        android:id="@+id/FailView"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#be1c1d"
        android:visibility="gone"/>


    <EditText
        style="@style/BoldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Successful"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:ems="10"
        android:id="@+id/PassView"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#10ae4b"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            style="@style/BoldText"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Payment Result"
            android:id="@+id/lblResult"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

        <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRINT SLIP"
        android:id="@+id/btnPrint"
        android:onClick="print"
            android:background="@drawable/buttonstate_main"

            android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
            android:visibility="gone"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/btnMainMenu"
            android:onClick="MainMenu"
            android:background="@drawable/buttonstate_main"

            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="20dp"


            />

        <EditText
            style="@style/smallwordtextwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrinterIP"
            android:layout_row="17"
            android:layout_column="0"
            android:text="192.168.103.253"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>