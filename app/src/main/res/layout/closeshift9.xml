<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_app"
    android:keepScreenOn="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/BoldText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RESULT"
            android:id="@+id/lblResult"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" CLOSE SHIFT"
            android:id="@+id/buttonLogIn"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/ovalcornersfull"
            android:layout_marginTop="40dp"
            android:onClick="CloseShift" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" BACK "
            android:id="@+id/buttonMainMenu"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/ovalcornersfull"
            android:layout_marginTop="40dp"
            android:onClick="MainMenu" />


        <EditText
            style="@style/smallwordtextwhite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrinterIP"

            android:text="192.168.103.253"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>

    </LinearLayout>




</LinearLayout>