<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <Button
            android:text="Tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialbtn"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/logonewtwo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/vendorLoginResult"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            style="@style/smallwordtext"
            android:text="Enter Vendor PIN and Password."
            android:layout_height="wrap_content"
            android:id="@+id/seteventtext"
            android:textColor="#000000"
            android:textStyle="bold"/>



        <EditText
            style="@style/passwordtext"
            android:backgroundTint="#efefef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editVendorCode"
            android:inputType="number"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:hint="Enter Vendor Code"
            android:textColor="#000000"
            android:textColorHint="#8e8e8e"
            android:layout_margin="0dp"
            />

        <EditText
            style="@style/passwordtext"
            android:backgroundTint="#efefef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editVendorPin"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Enter Pin"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textColorHint="#8e8e8e"
            android:layout_margin="0dp"
            android:fontFamily="sans-serif"
         />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Sign In"
            android:id="@+id/buttonLogIn"
            android:background="@drawable/buttonstate_main"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="VendorLogin" />


    </LinearLayout>


</LinearLayout>

