<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            android:id="@+id/imageView5" />

        <TextView
            style="@style/passwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select event in the drop down list below. If you cannot find the event you are looking for please contact the event organiser and give him your vendor code."
            android:textSize="15dp"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                    android:background="@drawable/event"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_row="0"
            android:layout_column="0"


            android:backgroundTint="#000000"
            android:layout_marginTop="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef"
            />

        <Button
            android:background="@drawable/ovalcornersfull"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" SET EVENT"
            android:id="@+id/buttonSetEvent"

            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:onClick="SetEvent"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</LinearLayout>