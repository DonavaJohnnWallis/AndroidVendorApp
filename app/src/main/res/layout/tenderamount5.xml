<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:keepScreenOn="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/labelCurrentEvent"
            style="@style/smallwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="No Event Set"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />


        <TextView
            android:id="@+id/labelStaffCode"
            style="@style/smallwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:editable="false"
            android:ems="10"
            android:hint="No Staff Loaded"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/labelCurrentShift"
            style="@style/smallwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="No Active Shift"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:background="#ffffff"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView2"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/btn0"
            android:layout_centerHorizontal="true"
            android:text="Total Amount Due:"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginTop="20dp"

            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textView"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/btn0"
            android:layout_centerHorizontal="true"
            android:hint="Enter Amount"
            android:text="30"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="55dp"
            android:textStyle="bold"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="7"
            android:background="#f5ab1c" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">


        <Button
            android:id="@+id/btn7"
            style="@style/buttonstyleleft"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstate_main"
            android:onClick="append7"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/btn8"
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstate_main"
            android:onClick="append8"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn9"
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstate_main"
            android:onClick="append9"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="gone"

            />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">


        <Button
            android:id="@+id/btn4"
            style="@style/buttonstyleleft"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append4"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn5"
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append5"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6"
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append6"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">


        <Button
            android:id="@+id/btn1"
            style="@style/buttonstyleleft"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append1"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append2"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3"
            style="@style/buttonstyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="append3"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center_horizontal"
        android:visibility="gone">





    <Button
        style="@style/buttonstyleleft"
        android:background="@drawable/buttonstate_main"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="0"
        android:id="@+id/btn0"
        android:onClick="append0"

         />


    <Button
        style="@style/buttonstyle"
        android:background="@drawable/buttonstate_main"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="00"
        android:id="@+id/btn00"
        android:onClick="append00"
         />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"

        >


        <Button
            android:id="@+id/btnClear"
            style="@style/buttonstyleleft"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="clearNumber"
            android:text="Clear"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone"



            />

        <Button
            android:id="@+id/buttonPayment"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/buttonstate_main"
            android:onClick="TenderAmount"
            android:text="Confirm"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>







</LinearLayout>